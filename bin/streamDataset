#!/bin/bash
[ -z $LOD_ANALYSIS_JAR ] && echo "LOD_ANALYSIS_JAR environment variable not set" && exit 1;

force='-force';
verbose='-verbose';
memory="-Xmx60G"
[ -z "$1" ] && echo "No dataset provided as argument" && exit 1;

metrics="$METRIC_DIR"

if [ -z "$2" ]; then
	echo "Using metric dir $METRIC_DIR"
else
	metrics=$2;
fi



java $memory -jar $LOD_ANALYSIS_JAR $force $verbose -dataset $1 -metrics $metrics "lodanalysis.streamer.StreamDatasets"
